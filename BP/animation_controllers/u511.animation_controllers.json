{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.u511_mechanic": {
      "states": {
        "default": {
          "transitions": [
            {
              "working": "query.has_rider"
            },
            {
              "remove": "!query.has_rider"
            }
          ]
        },
        "working": {
          "on_entry": [
            "/execute @s ~ ~ ~ tag @s add riding",
            "/execute @e[r=10, type=player] ~ ~ ~ effect @s water_breathing 5 5 true",
            "/execute @p[rx=-60,rxm=-90] ~ ~ ~ execute @e[tag=riding,type=submarine:u511] ~ ~ ~ tag @s add up",
            "/execute @p[rx=-60,rxm=-90] ~ ~ ~ execute @e[tag=riding,type=submarine:u511] ~ ~ ~ tag @s remove down",
            "/execute @p[rx=90,rxm=80] ~ ~ ~ execute @e[tag=riding,type=submarine:u511] ~ ~ ~ tag @s add down",
            "/execute @p[rx=90,rxm=80] ~ ~ ~ execute @e[tag=riding,type=submarine:u511] ~ ~ ~ tag @s remove up"
          ],
          "transitions": [
            {
              "default": "1.0"
            }
          ]
        },
        "remove": {
          "on_entry": ["/execute @s ~ ~ ~ tag @s remove riding"],
          "transitions": [
            {
              "default": "1.0"
            }
          ]
        }
      }
    }
  }
}
