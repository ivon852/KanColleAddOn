{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.attack": {
      "states": {
        "default": {
          "transitions": [
            {
              "ppweapon_shoot": "(query.get_equipped_item_name=='pp_weapon') && query.is_using_item > 0"
            },
            {
              "general_dropbomb": "(query.get_equipped_item_name=='bomb') && query.is_using_item > 0"
            },
            {
              "g4m2e_mxy7": "(query.get_equipped_item_name=='mxy7') && query.is_using_item > 0"
            },
            {
              "g4m2e_type91torpedo": "(query.get_equipped_item_name=='type91torpedo') && query.is_using_item > 0"
            }
          ]
        },
        "general_dropbomb": {
          "transitions": [
            {
              "default": "(1.0)"
            }
          ],
          "on_entry": [
            "/replaceitem entity @e[type=aircraft:g4m2e, tag=flying,c=1] slot.weapon.mainhand 0 newitem:bomb"
          ]
        },
        "g4m2e_mxy7": {
          "transitions": [
            {
              "default": "(1.0)"
            }
          ],
          "on_entry": [
            "/replaceitem entity @e[type=aircraft:g4m2e, tag=flying,c=1] slot.weapon.mainhand 0 newitem:mxy7"
          ]
        },
        "g4m2e_type91torpedo": {
          "transitions": [
            {
              "default": "(1.0)"
            }
          ],
          "on_entry": [
            "/replaceitem entity @e[type=aircraft:g4m2e, tag=flying,c=1] slot.weapon.mainhand 0 newitem:type91torpedo",
            "/replaceitem entity @e[type=submarine:u511, tag=riding,c=1] slot.weapon.mainhand 0 newitem:type91torpedo"
          ]
        },
        "ppweapon_shoot": {
          "transitions": [
            {
              "default": "(1.0)"
            }
          ],
          "on_entry": ["@s pp_weapon:shoot"]
        }
      }
    }
  }
}
