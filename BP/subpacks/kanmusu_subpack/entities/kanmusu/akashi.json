      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "akashi:is_not_repairing"
          ]
        }
      },
      "akashi:change_to_swimsuit": {
        "add": {
          "component_groups": [
            "akashi:swimsuit"
          ]
        }
      },
      "akashi:change_to_normal": {
        "remove": {
          "component_groups": [
            "akashi:swimsuit"
          ]
        }
      },
      "akashi:start_repairing": {
        "remove": {
          "component_groups": [
            "akashi:is_not_repairing"
          ]
        },
        "add": {
          "component_groups": [
            "akashi:is_repairing"
          ]
        }
      },
      "akashi:stop_repairing": {
        "remove": {
          "component_groups": [
            "akashi:is_repairing"
          ]
        },
        "add": {
          "component_groups": [
            "akashi:is_not_repairing"
          ]
        }
      },
      "akashi:start_talking": {
        "remove": {
          "component_groups": [
            "akashi:stop_talking"
          ]
        },
        "add": {
          "component_groups": [
            "akashi:start_talking"
          ]
        }
      },
      "akashi:stop_talking": {
        "remove": {
          "component_groups": [
            "akashi:start_talking"
