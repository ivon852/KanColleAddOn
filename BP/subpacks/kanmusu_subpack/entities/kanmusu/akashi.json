        "minecraft:behavior.look_at_player": {
          "priority": 2,
          "look_distance": 2
        },
        "minecraft:behavior.random_look_around": {
          "priority": 8
        },
        "minecraft:attack": {
          "damage": 10
        },
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 4,
          "entity_types": [
            {
              "filters": {
                "any_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "abyssal"
                  }
                ]
              }
            }
          ],
          "must_see": true,
          "within_radius": 32,
          "reselect_targets": true
