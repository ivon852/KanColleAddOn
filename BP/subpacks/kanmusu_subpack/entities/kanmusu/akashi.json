      },
      "akashi:is_not_repairing": {
        //換泳裝
        "minecraft:environment_sensor": {
          "triggers": [
            {
              "filters": {
                "test": "has_biome_tag",
                "operator": "==",
                "value": "ocean"
              },
              "event": "akashi:change_to_swimsuit"
            },
            {
              "filters": {
                "test": "has_biome_tag",
