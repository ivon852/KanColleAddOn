      "is_summonable": true,
      "is_experimental": false,
      "animations": {
        "hiryu_talk": "controller.animation.hiryu_talk"
      },
      "scripts": {
        "animate": [
          "hiryu_talk"
        ]
      }
    },
    "component_groups": {
      "hiryu:stop_talking": {
        "minecraft:mark_variant": {
          "value": 1
        }
      },
      "hiryu:start_talking": {
        "minecraft:mark_variant": {
          "value": 2
        },
        "minecraft:timer": {
          "looping": false,
          "time": 0.01,
          "time_down_event": {
            "event": "hiryu:stop_talking",
            "target": "self"
          }
        }
      },
      "battle_start": {
        "minecraft:spawn_entity": {
          "entities":{
          "min_wait_time": 10,
          "max_wait_time": 20,
          "num_to_spawn": 3,
          "spawn_entity": "aircraft:type99d",
          "single_use": false
          }
        }
      },
      "hiryu_too_close": {
        "minecraft:behavior.avoid_mob_type": {
          "priority": 1,
          "entity_types": [
            {
              "filters": {
                "test": "is_family",
                "subject": "other",
                "value": "abyssal"
              },
              "max_dist": 10,
              "walk_speed_multiplier": 2,
              "sprint_speed_multiplier": 2
            }
          ]
        }
      }
    },

    "events": {
      "hiryu:start_talking": {
        "remove": {
          "component_groups": [
            "hiryu:stop_talking"
          ]
        },
        "add": {
          "component_groups": [
            "hiryu:start_talking"
          ]
        }
      },
      "hiryu:stop_talking": {
        "remove": {
          "component_groups": [
            "hiryu:start_talking"
          ]
        },
        "add": {
          "component_groups": [
            "hiryu:stop_talking"
          ]
        }
      },
      "battle_start": {
        "add": {
          "component_groups": ["battle_start"]
        }
      },
      "battle_end": {
        "remove": {
          "component_groups": ["battle_start"]
        }
      },
      "hiryu_too_close": {
        "add": {
          "component_groups": ["hiryu_too_close"]
        }
      },
      "hiryu_range_attack": {
        "remove": {
          "component_groups": ["hiryu_too_close"]
        }
      }
    },

    "components": {
      "minecraft:mark_variant": {
        "value": 1
      },
      "minecraft:interact": {
        "interactions": [
          {
            "on_interact": {
              "filters": {
